@model List<AppointmentSystem.Models.Appointment>


<h2>Receptionist Dashboard</h2>

<a asp-controller="Patient" asp-action="CreatePatient" class="btn btn-outline-primary mb-3">Create Patient</a>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Patient Name</th>
            <th>Sex</th>
            <th>Doctor</th>
            <th>Date</th>
            <th>Time</th>
            <th>Status</th>
            <th>Notes</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.Patient?.FullName</td>
                <td>@appointment.Patient?.Sex</td>
                <td>Dr. @appointment.Doctor?.FullName</td>
                <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd")</td>
                <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                <td>@appointment.Status</td>
                <td>@appointment.Notes</td>
                <td>
                    <a asp-controller="Appointment" asp-action="AppointmentDetails" asp-route-id="@appointment.AppointmentId" class="btn btn-sm btn-info">Details</a>
                    <a asp-controller="Appointment" asp-action="Cancel" asp-route-id="@appointment.AppointmentId" class="btn btn-sm btn-danger">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>