@model AppointmentSystem.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title mb-4"><i class="bi bi-calendar2-check"></i> Appointment Details</h4>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <h5>Patient Info</h5>
                            <p><strong>Name:</strong> @Model.Patient?.FullName</p>
                            <p><strong>Sex:</strong> @Model.Patient?.Sex</p>
                            <p><strong>Email:</strong> @Model.Patient?.Email</p>
                            <p><strong>Phone:</strong> @Model.Patient?.Phone</p>
                        </div>

                        <div class="col-md-6">
                            <h5>Doctor Info</h5>
                            <p><strong>Name:</strong> Dr. @Model.Doctor?.FullName</p>
                            <p><strong>Specialization:</strong> @Model.Doctor?.Specialization</p>
                        </div>

                        <div class="col-md-6">
                            <h5>Appointment Info</h5>
                            <p><strong>Date:</strong> @Model.AppointmentDate.ToString("yyyy-MM-dd")</p>
                            <p><strong>Time:</strong> @Model.AppointmentTime.ToString(@"hh\:mm")</p>
                            <p><strong>Status:</strong> @Model.Status</p>
                            <p><strong>Notes:</strong> @Model.Notes</p>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Back</a>
                        <a class="btn btn-warning" asp-action="ChangeAppointmentStatus" asp-route-id="@Model.AppointmentId">
                            <i class="bi bi-pencil-square"></i> Change Date
                        </a>
                        <a class="btn btn-danger" asp-action="Cancel" asp-route-id="@Model.AppointmentId">
                            <i class="bi bi-x-circle"></i> Cancel Appointment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
