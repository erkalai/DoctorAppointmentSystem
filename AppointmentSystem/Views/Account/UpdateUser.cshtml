@using AppointmentSystem.Models.Dtos
@model AppointmentSystem.Models.Dtos.UpdateUser
@{
	ViewData["Title"] = "Update User";
}

<h2 class="text-center mb-4">Edit User</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="UpdateUser" method="post" class="p-4 border rounded shadow-sm bg-light">
            <input type="hidden" asp-for="UserId" />
            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                @* <span asp-validation-for="Email" class="text-danger"></span> *@
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" class="form-select">
                    <option value="">-- Select Role --</option>
                    <option value="Admin">Admin</option>
                    <option value="Doctor">Doctor</option>
                    <option value="Receptionist">Receptionist</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                @* <span asp-validation-for="Password" class="text-danger"></span> *@
            </div>

            <div class="mb-3">
                <label asp-for="Specialization" class="form-label"></label>
                <input asp-for="Specialization" type="password" class="form-control" />
                @* <span asp-validation-for="Specialization" class="text-danger"></span> *@
            </div>

            <div class="mb-3">
                <label asp-for="Qualifications" class="form-label"></label>
                <input asp-for="Qualifications" type="password" class="form-control" />
                @* <span asp-validation-for="Qualifications" class="text-danger"></span> *@
            </div>

            <div class="mb-3">
                <label asp-for="WorkDayStart" class="form-label"></label>
                <input asp-for="WorkDayStart" type="password" class="form-control" />
                @* <span asp-validation-for="WorkDayStart" class="text-danger"></span> *@
            </div>

            <div class="mb-3">
                <label asp-for="WorkDayEnd" class="form-label"></label>
                <input asp-for="WorkDayEnd" type="password" class="form-control" />
                @* <span asp-validation-for="WorkDayEnd" class="text-danger"></span> *@
            </div>

            <div class="mb-3">
                <label asp-for="AppointmentDuration" class="form-label"></label>
                <input asp-for="AppointmentDuration" type="password" class="form-control" />
                @* <span asp-validation-for="AppointmentDuration" class="text-danger"></span> *@
            </div>

            <button type="submit" class="btn btn-success w-100">Register</button>

            <div class="text-center mt-3">
                Already have an account? <a asp-action="Login" asp-controller="Account">Login here</a>
            </div>
        </form>
    </div>
</div>
