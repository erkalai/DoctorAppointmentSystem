@model AppointmentSystem.Models.Patient


<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form method="post" class="border p-4 rounded shadow-sm bg-light">
                    <h5 class="card-title">Patient Information</h5>
                    <table class="table table-bordered">
                        <tr>
                            <th>Full Name</th>
                            <td>@Model.FullName</td>
                        </tr>
                        <tr>
                            <th>Sex</th>
                            <td>@Model.Sex</td>
                        </tr>
                        <tr>
                            <th>Date of Birth</th>
                            <td>@Model.DateOfBirth</td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>@Model.Address</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Registration Date</th>
                            <td>@Model.RegistrationDate.ToString("dd MMM yyyy")</td>
                        </tr>
                    </table>
                    <a class="btn btn-success btn-block" asp-action="Index">Back</a>
                        <!-- Submit Button -->
                        <button type="submit" asp-action="DeletePatientConfirmed" asp-route-id="@Model.PatientId" class="btn btn-primary btn-block">
                            <i class="fas fa-user-plus"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
