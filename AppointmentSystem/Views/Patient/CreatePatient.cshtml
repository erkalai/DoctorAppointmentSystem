@model AppointmentSystem.Models.Patient

@{
    ViewData["Title"] = "Edit Patient";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4">
                        <i class="bi bi-pencil-square"></i> Edit Patient Information
                    </h4>

                    <form asp-action="CreatePatient" method="post">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label"><i class="bi bi-person-fill"></i> Full Name</label>
                                <input asp-for="FullName" class="form-control" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Sex" class="form-label"><i class="bi bi-gender-ambiguous"></i> Sex</label>
                                <select asp-for="Sex" class="form-control">
                                    <option value="">-- Select --</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Sex" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DateOfBirth" class="form-label"><i class="bi bi-calendar-event"></i> Date of Birth</label>
                                <input asp-for="DateOfBirth" class="form-control" type="date" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label"><i class="bi bi-telephone-fill"></i> Phone</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label"><i class="bi bi-envelope-fill"></i> Email</label>
                                <input asp-for="Email" class="form-control" type="email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Address" class="form-label"><i class="bi bi-geo-alt-fill"></i> Address</label>
                                <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Back</a>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-save-fill"></i> Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
<script src="~/js/site.js"></script>
}